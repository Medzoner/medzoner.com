{% extends '@MedzonerGlobal/base.html.twig' %}

{% block content %}
    <div class="book row">
        <div class="large-12 columns">
            <section class="content">
                <div class="row">
                    <div class="large-12 columns">
                        <div id="blog_create">
                            {% if is_granted("ROLE_ADMIN") %}
                                <form action="{{ path('site_blog_create') }}" method="post" {{ form_enctype(form) }} class="blogger">
                                    {{ form_widget(form) }}
                                    <p>
                                        <input type="submit" value="Submit">
                                    </p>
                                </form>
                            {% else %}
                                <p> <a href="/login" />Permissions requises</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}