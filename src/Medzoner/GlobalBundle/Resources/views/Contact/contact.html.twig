{% extends '@MedzonerGlobal/base.html.twig' %}
{% set page_title = "Contact" %}


{% block content %}
<div class="row">
    <div class="large-12 columns">
        <section class="content">
            
            {% if message is not empty %}
            <div class="row">
                <div class="large-12 columns">
                    <div class="blogger-notice">
                    {{ message[0] }}
                    </div>
                </div>
            </div>
            {% endif %}
            <div class="row">
                <div class="large-6 columns">
                    <div>
                    {{ form(form) }}
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
{% endblock %}