FROM nginx:1.11

COPY ./etc/nginx/nginx.conf /etc/nginx/nginx.conf
COPY ./etc/nginx/conf.d/cdn.conf /etc/nginx/conf.d/default.conf

RUN mkdir -p /var/www

COPY assets/rev-manifest-css.json /usr/share/nginx/html/revision/rev-manifest-css.json
COPY assets/rev-manifest-js.json /usr/share/nginx/html/revision/rev-manifest-js.json
COPY web/css /usr/share/nginx/html/css
COPY web/js /usr/share/nginx/html/js
COPY web/images /usr/share/nginx/html/images
COPY web/favicon.png /usr/share/nginx/html/favicon.png
#COPY web/fonts /usr/share/nginx/html/fonts

RUN chown -R www-data:www-data /usr/share/nginx/html

WORKDIR /usr/share/nginx/html

CMD ["nginx", "-g", "daemon off;"]

